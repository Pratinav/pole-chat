{
    "hosting": {
        "public": "public"
    },
    "rewrites": [{
        "source" : "**",
        "destination" : "/index.html"
    }],
    "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "src",
        "gulpfile.js",
        "package.json"
    ],
    "headers": [{
        "source": "**/*.@(html|css|js|jpg|jpeg|png|svg|gif)",
        "headers": [{
            "key": "Cache-Control",
            "value": "max-age=31536000"
        }]
    }]
}
