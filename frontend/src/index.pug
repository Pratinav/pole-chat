doctype html
html(lang='en')
    head
        title Pole Chat
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0')
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name='author', content='Pratinav Bagla')
        meta(name='description', content='A simple chat application built on NodeJS using Express and Socket.io')
        meta(name='keywords', content='chat, app, nodejs, express, socket.io')
        meta(property='og:url', content='https://pole-chat.herokuapp.com/')
        meta(property='og:title', content='Pole Chat')
        meta(property='og:site_name', content='Pole Chat')
        meta(property='og:description', content='A simple chat application built on NodeJS using Express and Socket.io')
        meta(name="theme-color", content="#308dcc")
        meta(name="msapplication-navbutton-color", content="#308dcc")
        meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,600', rel='stylesheet', type='text/css')
        style
            include css/main.css

    body
        .spinner__container
            .spinner
        .login__wrapper
            form.login
                label Enter any username to continue
                .input-wrapper
                    input(class="login-input", type="text", placeholder="Enter any username")
                    button Join Chat
                .err.username-taken
                    b Username Taken
                .err.username-invalid
                    b Username Invalid
                    | Username can only contain letters, numbers, underscores and dashes.
                    br
                    | Minimum length: 3
                    br
                    | Maximum length: 15
        header
            a(href="https://github.com/pratinav/pole-chat", target="_blank", title="GitHub"): b Pole Chat
            span.pull
                span.user-no
        .users-online
            div
                span.user-no
                svg.close(fill="#DCDCDC", height="24", viewbox="0 0 24 24", width="24", xmlns="http://www.w3.org/2000/svg")
                    path(d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z")
                    path(d="M0 0h24v24H0z", fill="none")

            .me
        ul.chatbox.container
        section.send-msg
            form.container
                input.msg(type="text", autocomplete="off", placeholder="Write something")
                button.btn-send
                    svg(fill="#3498db", height="24", viewbox="0 0 24 24", width="24", xmlns="http://www.w3.org/2000/svg")
                        path(d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z")
                        path(d="M0 0h24v24H0z", fill="none")

        script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.4.8/socket.io.min.js")
        script(src="/js/app.js")